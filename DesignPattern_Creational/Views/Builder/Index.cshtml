@model DesignPattern_Creational.Services.Builder.Order
@{
    ViewData["Title"] = "Builder";
}
<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title">Builder</h4>
                <p class="mb-2">Separates how an object is built from the final object, allowing step-by-step construction.</p>
                <ul>
                    <li>Build complex objects incrementally.</li>
                    <li>Reuse the same construction for different representations.</li>
                    <li>Avoid telescoping constructors and improve readability.</li>
                </ul>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Live Demo</span>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#builderCodeModal" aria-label="Open code comparison modal">
                    Code Comparison
                </button>
            </div>
            <div class="card-body">
                <p class="text-muted">Build an order step by step. Skip optional steps when you don't need them.</p>
                <form method="post" asp-action="Build" class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label" for="product">Product</label>
                        <input id="product" name="product" class="form-control" placeholder="Product name" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="quantity">Quantity</label>
                        <input id="quantity" name="quantity" type="number" value="1" class="form-control" min="1" />
                    </div>
                    <div class="col-md-4">
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="checkbox" id="useGift" name="useGift" value="true" />
                            <label class="form-check-label" for="useGift">Include Gift</label>
                        </div>
                        <label class="form-label" for="giftMessage">Gift Message (optional)</label>
                        <input id="giftMessage" name="giftMessage" class="form-control" />
                        <div class="form-text">Uncheck "Include Gift" to skip this optional step.</div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary">Build Order</button>
                    </div>
                </form>

                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        const chk = document.getElementById('useGift');
                        const msg = document.getElementById('giftMessage');
                        function sync() {
                            const enabled = chk.checked;
                            msg.disabled = !enabled;
                            if (!enabled) msg.value = '';
                        }
                        chk.addEventListener('change', sync);
                        sync();
                    });
                </script>

                @* Show validation errors *@
                @if(!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                @if (Model != null && Model.Items.Any())
                {
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">Order Summary</div>
                                <div class="card-body">
                                    <div><strong>Order Id:</strong> @Model.Id</div>
                                    <div><strong>Created:</strong> @Model.CreatedAt.ToLocalTime()</div>
                                    @if (!string.IsNullOrWhiteSpace(Model.GiftMessage))
                                    {
                                        <div class="mt-2"><strong>Gift Message:</strong> @Model.GiftMessage</div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">Items</div>
                                <ul class="list-group list-group-flush">
                                    @foreach (var item in Model.Items)
                                    {
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span>@item.Product</span>
                                            <span class="badge text-bg-primary">x @item.Quantity</span>
                                        </li>
                                    }
                                    @if (Model.IncludeGift)
                                    {
                                        <li class="list-group-item">
                                            <span class="text-success">Gift included</span>
                                            @if (!string.IsNullOrWhiteSpace(Model.GiftMessage))
                                            {
                                                <div class="small text-muted mt-1">Message: @Model.GiftMessage</div>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Code Comparison Modal: Fullscreen -->
<div class="modal fade" id="builderCodeModal" tabindex="-1" aria-labelledby="builderCodeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="builderCodeModalLabel">Builder Pattern — Code Comparison</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <h6 class="mb-1">Enterprise scenario</h6>
                    <p class="mb-0 text-muted">A reporting microservice generates dynamic reports with optional sections: Summary, Charts, Filters, Metadata, etc.</p>
                </div>

                <div class="row g-3 row-cols-1 row-cols-xl-2">
                    <!-- Problem Column -->
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span>Without Design Pattern</span>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-copy-target="builder-code-problem">Copy</button>
                            </div>
                            <div class="card-body">
                                <p class="mb-2 text-muted">Constructing complex objects with too many optional parameters.</p>
                                <div class="bg-dark text-light rounded p-3 overflow-auto" style="max-height:70vh;">
<pre class="mb-0"><code id="builder-code-problem" class="language-csharp">var report = new Report("Sales Report", true, true, false, true, "PDF");
</code></pre>
                                </div>
                                <div class="mt-3">
                                    <div class="fw-semibold mb-1">Issues</div>
                                    <ul class="mb-0">
                                        <li>Unclear parameter meaning.</li>
                                        <li>Adding new report parts breaks constructor signatures.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Solution Column -->
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span>Builder Pattern</span>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-copy-target="builder-code-solution">Copy</button>
                            </div>
                            <div class="card-body">
                                <p class="mb-2 text-muted">Use a fluent builder to compose optional parts clearly.</p>
                                <div class="bg-dark text-light rounded p-3 overflow-auto" style="max-height:70vh;">
<pre class="mb-0"><code id="builder-code-solution" class="language-csharp">public class Report
{
    public string Title { get; set; }
    public bool IncludeSummary { get; set; }
    public bool IncludeCharts { get; set; }
    public bool IncludeFilters { get; set; }
    public string Format { get; set; }
    public override string ToString() => $"Report: {Title}, Format: {Format}";
}

public class ReportBuilder
{
    private readonly Report _report = new Report();

    public ReportBuilder SetTitle(string title) { _report.Title = title; return this; }
    public ReportBuilder IncludeSummary() { _report.IncludeSummary = true; return this; }
    public ReportBuilder IncludeCharts() { _report.IncludeCharts = true; return this; }
    public ReportBuilder IncludeFilters() { _report.IncludeFilters = true; return this; }
    public ReportBuilder SetFormat(string format) { _report.Format = format; return this; }

    public Report Build() => _report;
}

// Client
var report = new ReportBuilder()
    .SetTitle("Q4 Sales Report")
    .IncludeSummary()
    .IncludeCharts()
    .SetFormat("PDF")
    .Build();

Console.WriteLine(report);
</code></pre>
                                </div>
                                <div class="mt-3">
                                    <div class="fw-semibold mb-1">Benefits</div>
                                    <ul class="mb-0">
                                        <li>Clear, fluent API for complex object creation.</li>
                                        <li>Simplifies optional configurations.</li>
                                        <li>Ideal for report generation, configuration objects, or complex DTOs.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('[data-copy-target]').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var target = document.getElementById(this.dataset.copyTarget);
                if (!target) return;
                var text = target.innerText;
                navigator.clipboard.writeText(text).then(() => {
                    var original = this.innerHTML;
                    this.innerHTML = 'Copied!';
                    this.classList.remove('btn-outline-secondary');
                    this.classList.add('btn-success');
                    setTimeout(() => {
                        this.innerHTML = original;
                        this.classList.remove('btn-success');
                        this.classList.add('btn-outline-secondary');
                    }, 1500);
                });
            });
        });
    });
</script></script>