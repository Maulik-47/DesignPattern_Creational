@model DesignPattern_Creational.Services.Prototype.UserProfile
@{
    ViewData["Title"] = "Prototype";
}
<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title">Prototype</h4>
                <p class="mb-2">Create new objects by cloning existing ones (prototypes) instead of creating them from scratch.</p>
                <ul>
                    <li>Quickly create preconfigured objects.</li>
                    <li>Avoid complex initialization for each new instance.</li>
                    <li>Clone, then tweak small differences.</li>
                </ul>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Live Demo</span>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#prototypeCodeModal" aria-label="Open code comparison modal">
                    Code Comparison
                </button>
            </div>
            <div class="card-body">
                <p class="text-muted">Pick a preconfigured profile and clone it. Adjust the clone without affecting the prototype.</p>
                <form method="get" class="row g-2 align-items-end">
                    <div class="col-sm-4">
                        <label class="form-label">Prototype</label>
                        <select name="name" class="form-select">
                            @foreach (var p in (IEnumerable<string>)ViewBag.Prototypes)
                            {
                                <option value="@p" selected="@(string.Equals(ViewBag.Selected as string, p, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@p</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Clone Theme</label>
                        <select name="theme" class="form-select">
                            <option value="__same__">Same as prototype</option>
                            <option value="Light">Light</option>
                            <option value="Dark">Dark</option>
                        </select>
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Clone Language</label>
                        <select name="language" class="form-select">
                            <option value="__same__">Same as prototype</option>
                            <option value="en-US">en-US</option>
                            <option value="en-GB">en-GB</option>
                            <option value="fr-FR">fr-FR</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-primary w-100">Clone</button>
                    </div>
                </form>

                @if (!string.IsNullOrWhiteSpace(ViewBag.Error as string))
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }

                @if (ViewBag.Prototype != null)
                {
                    var proto = (DesignPattern_Creational.Services.Prototype.UserProfile)ViewBag.Prototype;
                    <hr />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">Prototype</div>
                                <div class="card-body">
                                    <div><strong>Id:</strong> @proto.Id</div>
                                    <div><strong>Name:</strong> @proto.DisplayName</div>
                                    <div><strong>Role:</strong> @proto.Role</div>
                                    <div><strong>Theme:</strong> @proto.Prefs.Theme</div>
                                    <div><strong>Language:</strong> @proto.Prefs.Language</div>
                                </div>
                            </div>
                        </div>
                        @if (Model != null)
                        {
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header">Clone</div>
                                    <div class="card-body">
                                        <div><strong>Id:</strong> @Model.Id</div>
                                        <div><strong>Name:</strong> @Model.DisplayName</div>
                                        <div><strong>Role:</strong> @Model.Role</div>
                                        <div><strong>Theme:</strong> @Model.Prefs.Theme</div>
                                        <div><strong>Language:</strong> @Model.Prefs.Language</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Code Comparison Modal: Fullscreen -->
<div class="modal fade" id="prototypeCodeModal" tabindex="-1" aria-labelledby="prototypeCodeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prototypeCodeModalLabel">Prototype Pattern – Code Comparison</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <h6 class="mb-1">Enterprise scenario</h6>
                    <p class="mb-0 text-muted">A SaaS app provisions new customer tenants from a base tenant template. Each clone changes theme and localization without modifying the template.</p>
                </div>

                <div class="row g-3 row-cols-1 row-cols-xl-2">
                    <!-- Problem Column -->
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span>Without Design Pattern</span>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-copy-target="proto-code-problem">Copy</button>
                            </div>
                            <div class="card-body">
                                <p class="mb-2 text-muted">Every new tenant is manually configured with many defaults over and over.</p>
                                <div class="bg-dark text-light rounded p-3 overflow-auto" style="max-height:70vh;">
<pre class="mb-0"><code id="proto-code-problem" class="language-csharp">var tenant = new Tenant();
tenant.Theme = "Dark";
tenant.Language = "en-US";
// ... dozens of defaults repeated for each tenant
</code></pre>
                                </div>
                                <div class="mt-3">
                                    <div class="fw-semibold mb-1">Issues</div>
                                    <ul class="mb-0">
                                        <li>Repetition and chance for inconsistency.</li>
                                        <li>Slow provisioning.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Solution Column -->
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <span>Prototype Pattern</span>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-copy-target="proto-code-solution">Copy</button>
                            </div>
                            <div class="card-body">
                                <p class="mb-2 text-muted">Clone from a template and tweak what's different.</p>
                                <div class="bg-dark text-light rounded p-3 overflow-auto" style="max-height:70vh;">
<pre class="mb-0"><code id="proto-code-solution" class="language-csharp">public interface IPrototype<T> { T Clone(); }

public class Tenant : IPrototype<Tenant>
{
    public string Theme { get; set; } = "Light";
    public string Language { get; set; } = "en-US";
    public Tenant Clone() => new Tenant { Theme = Theme, Language = Language };
}

var template = new Tenant { Theme = "Dark", Language = "en-US" };
var clone = template.Clone();
clone.Language = "fr-FR"; // change without touching template
</code></pre>
                                </div>
                                <div class="mt-3">
                                    <div class="fw-semibold mb-1">Benefits</div>
                                    <ul class="mb-0">
                                        <li>Fast creation from templates.</li>
                                        <li>Safe tweaks without affecting the original.</li>
                                        <li>Great for UI templates, document/canvas objects, configuration presets.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('[data-copy-target]').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var target = document.getElementById(this.dataset.copyTarget);
                if (!target) return;
                var text = target.innerText;
                navigator.clipboard.writeText(text).then(() => {
                    var original = this.innerHTML;
                    this.innerHTML = 'Copied!';
                    this.classList.remove('btn-outline-secondary');
                    this.classList.add('btn-success');
                    setTimeout(() => {
                        this.innerHTML = original;
                        this.classList.remove('btn-success');
                        this.classList.add('btn-outline-secondary');
                    }, 1500);
                });
            });
        });
    });
</script>
